<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eIdeas</title>

    <!-- Files to use in the Dev environment -->
    <environment include="Development">
        <!-- Bootstrap 4 CSS using CDN, fallback to Project Copy -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap4/bs4.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <!-- Jquery slim version 3.3.1 using web distribution, fallback to Project Copy-->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                asp-fallback-src="~/lib/bootstrap4/jquery.min.js"
                asp-fallback-test="window.jQuery"></script>
        <!-- Bootstrap 4 + Popper Bundle using CDN, fallback to Project Copy -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap4/jsbundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>

        <!-- Site Custom CSS -->
        <link rel="stylesheet" href="~/css/site.css" />
        <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
    </environment>

    <!-- Files to use in the not Dev environments -->
    <environment exclude="Development">
        <!-- Bootstrap 4 CSS using CDN, fallback to Project Copy -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap4/bs4.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

        <!-- Site Custom CSS -->
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-md navbar-dark" style="background-color: #1189CB; color: white">
        <a asp-area="" asp-controller="Ideas" asp-action="Index" class="navbar-brand" >eIdeas</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <!--<li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home/Ideas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">My Ideas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Ideas" asp-action="Index">Subscribed Ideas</a>
                </li>-->
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </nav>
    <div id="BodyContainer">
        <div class="container-fluid body-content">
            <div class="row full">
                <div class="col " style="max-width:18rem; min-width:18rem;">
                    <div class="row full nav-justified  d-flex justify-content-center">
                        <partial name="_UserCardPartial" />
                    </div>
                </div>
                <div class="col">
                    @RenderBody()
                </div>
            </div>
            <div class="fixed-bottom">
                <hr style="margin-top: 0rem; margin-bottom: 0rem;"/>
                <footer class="footer">
                    <div style="padding: 0.5rem 1rem;">
                        <small class="text-muted">&copy; 2018 - eIdeas</small>
                    </div>
                </footer>
            </div>
            </div>
    </div>

    <!-- Files to use in the Dev environment -->
    <environment include="Development">
        <!-- Jquery slim version 3.3.1 using web distribution, fallback to Project Copy-->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap4/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <!-- Bootstrap 4 + Popper Bundle using CDN, fallback to Project Copy -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"
                integrity="sha384-pjaaA8dDz/5BgdFUPX6M/9SUZv4d12SUPF0axWc+VRZkx5xU3daN+lYb49+Ax+Tl" crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap4/jsbundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <!-- Site JavaScript -->
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    <!-- Files to use in the Non Dev environment -->
    <environment exclude="Development">
        <!-- Jquery slim version 3.3.1 using web distribution, fallback to Project Copy-->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" 
                asp-fallback-src="~/lib/bootstrap4/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <!-- Bootstrap 4 + Popper Bundle using CDN, fallback to Project Copy -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap4/jsbundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <!-- Site JavaScript -->
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

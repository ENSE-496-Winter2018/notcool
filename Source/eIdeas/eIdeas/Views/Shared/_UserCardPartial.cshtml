@using Microsoft.AspNetCore.Identity
@using eIdeas.Areas.Identity.Data
@inject SignInManager<eIdeasUser> SignInManager
@inject UserManager<eIdeasUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    var user = UserManager.GetUserAsync(User).Result;
    <div class="sidenav" style="position: fixed">
        <div class="card" style="margin:0 auto; width: 18rem; background-color: Gainsboro">
            <img class="rounded-circle card-img-top" style="width:100%; padding:1rem; min-height:280px; flex-shrink: 0;border: 1px solid transparent;" src="@Url.Action("Photo", "eIdeasUser" , new { UserId = UserManager.GetUserId(User) })" />
            <div class="card-body" style="margin:0 auto; width: 18rem; padding-top: 0rem;">
                <h4 class="mx-auto text-center card-title h4">@user.Firstname @user.Lastname</h4>
                <ul class="nav mx-auto flex-column">
                    <li class="nav-item" style="width:100%; padding-bottom:0.2rem;flex: 1 1 auto;">
                        <a class="btn btn-primary" style="width:100%; background-color: #41AF47; border-color: darkgrey" asp-area="" asp-controller="Ideas" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" style="width:100%; padding-bottom:0.2rem;flex: 1 1 auto;">
                        <a class="btn btn-primary " style="width:100%; background-color: #41AF47; border-color: darkgrey" asp-area="" asp-controller="Home" asp-action="About">Dashboard</a>
                    </li>
                    <li class="nav-item" style="width:100%; padding-bottom:0.2rem;flex: 1 1 auto;">
                        <a class="btn btn-primary " style="width:100%; background-color: #41AF47; border-color: darkgrey" asp-area="" asp-controller="Home" asp-action="Contact">My Ideas</a>
                    </li>
                    <li class="nav-item" style="width:100%; padding-bottom:0.2rem;flex: 1 1 auto;">
                        <a class="btn btn-primary " style="width:100%; background-color: #41AF47; border-color: darkgrey" asp-area="" asp-controller="Ideas" asp-action="Index">Subscribed</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

@model IEnumerable<eIdeas.Models.Comment>
@using Microsoft.AspNetCore.Identity
@using eIdeas.Areas.Identity.Data
@inject SignInManager<eIdeasUser> SignInManager
@inject UserManager<eIdeasUser> UserManager


<div class="collapse col"  id="collapse-content-@ViewData["id"]">
    <div class="card card-body">
        <form asp-controller="Comments" class="commentForm" asp-action="CreateComment">
            <input type="hidden" name="IdeaID" value="@ViewData["id"]" />
            <input type="hidden" name="UserID" value="@UserManager.GetUserAsync(User).Result.Id" />
            <div class="form-group">
                <label name="UserComment" class="control-label"></label>
                <textarea name="UserComment" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Comment" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

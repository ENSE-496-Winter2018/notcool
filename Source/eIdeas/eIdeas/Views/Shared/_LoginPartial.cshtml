@using Microsoft.AspNetCore.Identity
@using eIdeas.Areas.Identity.Data

@inject SignInManager<eIdeasUser> SignInManager
@inject UserManager<eIdeasUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
   
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.Firstname!</a>
        </li>
        <li class="nav-item">
            <button class="btn btn-outline-secondary" type="submit">Logout</button>
        </li>
    </ul>
</form>
        
        }
        else
        {
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link"> Register</a></li>
            <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link"> Login</a></li>
        </ul>
        }


@using Microsoft.AspNetCore.Identity
@using eIdeas.Areas.Identity.Data

@inject SignInManager<eIdeasUser> SignInManager
@inject UserManager<eIdeasUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
   
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="form-inline my-0 my-lg-0">
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.Firstname! </a>
        </li>
        <li>
            <a class="nav-link" asp-area="" asp-controller="Notifications" asp-action="Notifications">Notifications </a>
        </li>
        <li class="nav-item">
            <a style="fill: rgba(255, 255, 255, 0.5);" class="nav-link" href="#">
                <i style="font-size: 20px;" class="far fa-bell">
                </i>  
                <span style="top: -10px; left: -12px; position: relative;">
                <span class="badge badge-pill badge-danger">2</span>
                </span>

            </a>
        </li>
        <li class="nav-item">
            <button style="border-color: transparent;" class="nav-link btn-outline-secondary" type="submit">
                <i style="font-size: 20px;" class="fas fa-sign-out-alt"></i> Logout
            </button>
        </li>
    </ul>
</form>

}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link"> 
     <span style="margin-bottom:5px"><img src="~/images/svg/baseline-person_add-24px.svg" alt="ASP.NET" style="margin-bottom:5px"/></span> Register</a></li>
    <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link">
    <img src="~/images/svg/account-login.svg" alt="ASP.NET" /> Login</a></li>
</ul>
}

